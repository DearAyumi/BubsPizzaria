@page
@model BubsPizzaria.Pages.Checkout.CheckoutModel
@{
}

<h1>Your Order</h1>
@{
    var imagePath = "~/images/Pizzas/" + (Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true" />
        <p>@Model.CustomerName, your order is ready!</p>
        <p>Total price of your order is: $@Model.PizzaPrice </p>
        <br/>
        <a class="btn btn-secondary btn-lg btn-block mt-1" asp-area="" asp-page="ThankYou">Confirm Order</a>
    </div>
</div>